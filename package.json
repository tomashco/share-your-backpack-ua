{
  "name": "share-your-backpack-ua",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "prisma": {
    "schema": "./packages/db/prisma/schema.prisma"
  },
  "scripts": {
    "vercel:install": "yarn install",
    "build": "turbo build",
    "native": "cd apps/expo && yarn start",
    "release:android": "cd apps/expo && yarn release:android",
    "adb": "cd apps/expo && yarn adb",
    "watch": "yarn workspaces foreach -pi run watch",
    "web": "yarn build && cd apps/next && yarn dev",
    "web:extract": "DISABLE_EXTRACTION=false yarn workspace next-app dev",
    "web:prod": "yarn workspace next-app build",
    "web:prod:serve": "yarn workspace next-app serve",
    "db-push": "turbo db-push",
    "postinstall": "yarn build:ui && yarn generate",
    "build:ui": "cd packages/ui && yarn build",
    "generate": "cd packages/db && yarn prisma generate",
    "prisma:studio": "cd packages/db && yarn prisma:studio",
    "fix": "manypkg fix",
    "upgrade:tamagui": "yarn up '*tamagui*'@latest '@tamagui/*'@latest",
    "upgrade:tamagui:canary": "yarn up '*tamagui*'@canary '@tamagui/*'@canary",
    "check-deps": "check-dependency-version-consistency ."
  },
  "resolutions": {
    "esbuild": "0.19.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-refresh": "^0.14.0",
    "react-native-svg": "13.9.0",
    "react-native-web": "~0.19.6"
  },
  "dependencies": {
    "@babel/runtime": "^7.18.9",
    "@clerk/nextjs": "^4.27.2",
    "@manypkg/cli": "^0.19.1",
    "@my/db": "0.1.0",
    "@vercel/speed-insights": "^1.0.2",
    "check-dependency-version-consistency": "^3.0.3",
    "dotenv": "^16.3.1",
    "dotenv-cli": "^7.3.0",
    "eslint": "^8.28.0",
    "node-gyp": "^9.3.1",
    "prettier": "^2.7.1",
    "turbo": "latest",
    "typescript": "^4.9.4"
  },
  "packageManager": "yarn@3.6.3"
}
